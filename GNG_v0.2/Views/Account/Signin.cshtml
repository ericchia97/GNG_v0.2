@model GNG_v0._2.ViewModels.LoginViewModel
<!DOCTYPE html>
<html lang="en">

<body>
    <!-- sign in -->
    <div class="sign section--full-bg" data-bg="img/bg2.jpg">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="sign__content">
                        <!-- authorization form -->
                        <form action="#" class="sign__form" method="post">
                            <a href="index.html" class="sign__logo">
                                <img src="~/img/logo.svg" alt="">
                            </a>

                            <div class="sign__group">
                                <input asp-for="Email" class="sign__input" placeholder="Email">
                                <span asp-validation-for="Email" class="text-danger" style="color:red;font-size:60%"></span>
                            </div>

                            <div class="sign__group">
                                <input asp-for="Password" class="sign__input" placeholder="Password">
                                <span asp-validation-for="Password" class="text-danger" style="color:red;font-size:60%"></span>
                            </div>

                            <div class="sign__group sign__group--checkbox">
                                <input asp-for="RememberMe" name="remember" type="checkbox" checked="checked">
                                <label for="remember">Remember Me</label>
                            </div>

                            <button class="sign__btn" type="submit">Sign in</button>

                            <span class="sign__text">Don't have an account? <a href="Signup">Sign up!</a></span>

                            <span class="sign__text"><a href="Forgot">Forgot password?</a></span>
                        </form>
                        <!-- end authorization form -->
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end sign in -->

</body>
</html>